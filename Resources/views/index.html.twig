{% extends 'MESDPresentationPresentationBundle::base.html.twig' %}
{% block navbarContent %}
    {% block appLogo %}
        <a class="brand" href="#">
            <img src="{{ asset('bundles/mesdpresentationpresentation/img/orchestra_logo_sml.png') }}" alt="Orchestra"/>
        </a>
    {% endblock appLogo %}
    <a class="btn btn-navbar" data-toggle="collapse" data-target=".main-collapse" id="collapse" href="#">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
    </a>
    <div class="nav-collapse collapse main-collapse">
        {% block navLinks %}
            {% include 'MESDPresentationPresentationBundle::navLinks.html.twig' %}
        {% endblock navLinks %}
        <span class="pull-right">
            {% block searchBar %}
                {% include 'MESDPresentationPresentationBundle::searchBar.html.twig' %}
            {% endblock searchBar %}
            {% block userMenu %}
                {% include 'MESDPresentationPresentationBundle::userMenu.html.twig' %}
            {% endblock userMenu %}
        </span>
    </div><!-- END nav-collapse -->
{% endblock navbarContent %}
{% block container %}
    {% block sidebar %}
        {{ render(controller('MESDPresentationPresentationBundle:Default:sidebar', { 'menu': ''})) }}
    {% endblock sidebar %}

    <section id="content" class="content container-fluid">
        {% block content %}

            {% block breadcrumb %}
                <div id="toolbar-top" class="panel panel-white">
                    <ul class="breadcrumb">
                        <li><a href="#">Home</a></li>
                        <li class="divider">&rarr;</li>
                        <li class="active">Here</li>
                    </ul>
                </div>
            {% endblock breadcrumb %}

            {% block flashMessage %}
                {% for flashMessage in app.session.flashbag.get('notice') %}
                    {% if flashMessage is defined %}
                        <div class="flash-notice csuccess">
                            <h4>{{ flashMessage }}</h4>
                        </div>
                    {% endif %}
                {% endfor %}
            {% endblock flashMessage %}

            <div id="main" class="panel panel-white">
                {% block subtitle %}
                    {% if subtitle is defined %}
                        <h1>{{ subtitle }}</h1>
                    {% elseif pagetitle is defined %}
                        <h1>{{ pagetitle }}</h1>
                    {% endif %}
                {% endblock subtitle %}
                {% block main %}
                {% endblock main %}
            </div><!-- END main -->

            <div id="pagination">
                {% block pagination %}
                {% endblock pagination %}
            </div><!-- END pagination -->

        {% endblock content %}
    </section><!-- END content -->

{% endblock container %}
