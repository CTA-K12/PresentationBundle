<!DOCTYPE html>
<html lang="en">
    <!--[if lt IE 7]>      <html class="no-js lt-ie9 lt-ie8 lt-ie7"> <![endif]-->
    <!--[if IE 7]>         <html class="no-js lt-ie9 lt-ie8"> <![endif]-->
    <!--[if IE 8]>         <html class="no-js lt-ie9"> <![endif]-->

    <head>
        {% block head %}

            {% block meta %}
                <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" charset="utf-8" />
                <meta name="description" content="Application description goes here.">
                <meta name="viewport" content="width=device-width, initial-scale=1.0">
            {% endblock meta %}

            {% block title %}
                <title>{{ app_abbrev }}</title>
            {% endblock title %}

            {% block stylesheets %}
                {% stylesheets
                    '@MESDPresentationPresentationBundle/Resources/public/less/*'
                    filter='less'
                    output='bundles/mesdpresentationpresentation/css/orchestra-less.min.css' %}
                    <link href="{{ asset_url }}" type="text/css" rel="stylesheet" media="all" />
                {% endstylesheets %}
                {% stylesheets
                    '@MESDPresentationPresentationBundle/Resources/public/css/orchestra-0.1.css'
                    filter='cssrewrite' %}
                    <link rel="stylesheet" href="{{ asset_url }}" />
                {% endstylesheets %}
            {% endblock stylesheets %}

            {% block favicon %}
                <link rel="shortcut icon" href="{{ asset('bundles/mesdpresentationpresentation/ico/favicon.ico') }}" />
            {% endblock favicon %}

            {% block shiv %}
                <script src="{{ asset('bundles/mesdpresentationpresentation/js/modernizr/modernizr-2.6.2.js') }}"></script>
            {% endblock shiv %}

        {% endblock head %}
    </head>

    {% block body %}
        <body>
            {% block wrapper %}

                <header id="header">
                    {% block navbar %}
                        <nav id="nav" class="navbar">
                            <div class="navbar-fixed-top">
                                <div class="navbar-inner">
                                    {% block navbarContent %}
                                    {% endblock navbarContent %}
                                </div><!-- END navbar-inner -->
                            </div><!-- END navbar-fixed-top -->
                        </nav><!-- END nav, navbar -->
                    {% endblock navbar %}
                </header>

                <div id="container" class="wrapper-outer">
                    <div class="wrapper-inner">
                        {% block container %}
                        {% endblock container %}
                    </div>
                </div><!-- END container -->

                {% block footer %}
                    <footer id="footer" class="navbar">
                        <div class="navbar-fixed-bottom">
                            <div class="navbar-inner">
                                <div class="row-fluid">
                                    {% block footerContent %}
                                    <div class="footer-left span4">
                                    <p>
                                        <small>&copy; {{ "now"|date("Y") }} <span title="{{ org_name }}">{{ org_abbrev }}</span><br />{{ org_address }}</small>
                                    </p>
                                </div>
                                <div class="footer-center span4">
                                    <p>
                                        <small>version: {{ version }}</small>
                                    </p>
                                </div>
                                <div class="footer-right span4">
                                    <p>
                                        <small>more stuff</small>
                                    </p>
                                </div>
                                    {% endblock footerContent %}
                                </div>
                            </div><!-- END navbar-inner -->
                        </div><!-- END navbar-fixed-bottom -->
                    </footer><!-- END footer, navbar -->
                {% endblock footer %}

            {% block javascripts %}
                {% javascripts '@MESDPresentationPresentationBundle/Resources/public/js/jquery/*'
                               '@MESDPresentationPresentationBundle/Resources/public/js/bootstrap/*'
                               '@MESDPresentationPresentationBundle/Resources/public/js/cookie/*'
                               '@MESDPresentationPresentationBundle/Resources/public/js/introjs/*'
                               '@MESDPresentationPresentationBundle/Resources/public/js/orchestra-0.1.js'
                               output='bundles/mesdpresentationpresentation/js/orchestra.min.js' %}
                    <script type="text/javascript" src="{{ asset_url }}"></script>
                {% endjavascripts %}
            {% endblock javascripts %}

            {% endblock wrapper %}
        </body>
    {% endblock body %}

</html>
