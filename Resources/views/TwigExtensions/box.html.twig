{% block box %}
{% endblock box %}

{% block boxstart %}
<section id="{{ id }}" class="box">
{% endblock boxstart %}

{% block boxheader %}
    <div class="box-header">
        {% if opts.title is defined and opts.title is not empty %}<h3 class="box-header-title">{{ opts.title }}</h3>{% endif %}
        {% if opts.controls is defined and opts.controls is not empty %}
        <div class="btn-group">
            <button class="btn btn-sm btn-default"><i class="fa fa-cog"></i></button>
            <button class="btn btn-sm btn-default"><i class="fa fa-compress"></i></button>
            <button class="btn btn-sm btn-default"><i class="fa fa-expand"></i></button>
            <button class="btn btn-sm btn-default"><i class="fa fa-close"></i></button>
        </div>
        {% endif %}
    </div>
{% endblock boxheader %}

{% block boxbody %}
    <div class="box-body">
        <div class="row placeholders">
            {% for i in 0..3 %}
            <div class="col-xs-6 col-sm-3 placeholder">
                <img src="data:image/gif;base64,R0lGODlhAQABAIAAAHd3dwAAACH5BAAAAAAALAAAAAABAAEAAAICRAEAOw==" width="200" height="200" class="img-fluid" alt="Generic placeholder thumbnail">
                <h4>Label</h4>
                <span class="text-muted">Something else</span>
            </div>
            {% endfor %}
        </div>
    </div>
{% endblock boxbody %}

{% block boxfooter %}
<div class="box-footer"></div>
{% endblock boxfooter %}

{% block boxend %}
</section>
{% endblock boxend %}
