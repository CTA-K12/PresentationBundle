{% extends 'MesdPresentationBundle::splash.html.twig' %}
{% trans_default_domain "mesd_presentation" %}

{% block navbarContentLeft %}
{% endblock navbarContentLeft %}

{% block navbarContentRight %}
{% endblock navbarContentRight %}

{% block containerOuter %}

    <div id="container-outer" class="container-outer wrapper">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    {% block subtitle %}
                        {% if subtitle is defined %}
                            <h1 class="page-title">{{ subtitle|raw }}</h1>
                        {% elseif pagetitle is defined %}
                            <h1 class="page-title">{{ pagetitle|raw }}</h1>
                        {% else %}
                            <h1>
                                <span class="fa fa-lock"></span>&nbsp;
                                {{ '%app%.password.reset'|trans({'%app%': mesd_presentation_app_name}) }}
                            </h1>
                        {% endif %}
                    {% endblock subtitle %}
                </div>
                
                {% block mesd_user_content %}
                
                    {{ form_start(form) }}

                        <div class="modal-body">
                            {% block flashMessage %}
                                {% include 'MesdPresentationBundle:Block:flashMessage.html.twig' %}
                            {% endblock flashMessage %}

                            {% for type in ['danger', 'warning', 'info', 'success'] %}
                                {% for flashMessage in app.session.flashbag.get(type) %}
                                    {% if flashMessage is defined %}
                                        <div class="{{"alert alert-dismissable alert-"~type}}">
                                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                                            {{ flashMessage|raw }}
                                        </div>
                                    {% endif %}
                                {% endfor %}
                            {% endfor %}

                            {% block panelBody %}

                                {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                                    <div class="alert alert-warning alert-dismissible" role="alert">
                                        <button type="button" class="close" data-dismiss="alert">
                                            <span aria-hidden="true">&times;</span>
                                            <span class="sr-only">{{ 'close'|trans }}</span>
                                        </button>
                                        <span class="fa fa-exclamation-triangle"></span>&nbsp;
                                        <strong>{{ 'already.logged.in'|trans }}</strong>
                                        {{ 'logged.in.as.%username%'|trans({'%username%': app.user.username}) }}
                                    </div>
                                {% endif %}

                                {% if not form.vars.valid %}
                                    <div class="alert alert-danger alert-dismissible" role="alert">
                                        <button type="button" class="close" data-dismiss="alert">
                                            <span aria-hidden="true">&times;</span>
                                            <span class="sr-only">{{ 'close'|trans }}</span>
                                        </button>
                                        <span class="fa fa-exclamation-triangle"></span>&nbsp; <strong>{{ 'error'|trans }}</strong>
                                            {{ form_errors(form) }}
                                    </div>
                                {% endif %}

                                <div class="form-group">
                                    {{ form_label(form.plainPassword.first, 'new.password'|trans) }}
                                    <div class="input-group">
                                        <div class="input-group-addon">
                                            <span class="fa fa-key"></span>
                                        </div>
                                        {{ form_widget(form.plainPassword.first, {
                                            'attr': {
                                                'class':       'form-control',
                                                'placeholder': 'password'|trans,
                                                'tabindex':    1,
                                                'autofocus':   'autofocus'
                                        } }) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    {{ form_label(form.plainPassword.second, 'new.password.confirm'|trans) }}
                                    <div class="input-group">
                                        <div class="input-group-addon">
                                            <span class="fa fa-key"></span>
                                        </div>
                                        {{ form_widget(form.plainPassword.second, {
                                            'attr': {
                                                'class':       'form-control',
                                                'placeholder': 'password'|trans,
                                                'tabindex':    2,
                                        } }) }}
                                    </div>
                                </div>

                            {% endblock panelBody %}
                        </div>

                        <div class="modal-footer">
                            {% block panelFooter %}

                                <div class="row">
                                    <div class="col-xs-1-1">
                                        {{ form_widget(form.reset, {
                                            'label': 'reset'|trans,
                                            'icon': 'check',
                                            'attr': {
                                                'class': 'form-control btn btn-primary',
                                                'tabindex': 3
                                        }}) }}
                                    </div>
                                    {#}
                                        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                                            <div class="col-xs-5-12">
                                                <a href="{{ path(mesd_presentation_home_path) }}" title="home" class="btn btn-default form-control" tabindex="3">
                                                    <span class="fa fa-home"></span>&nbsp;
                                                    {{ 'home'|trans }}
                                                </a>
                                            </div>
                                        {% else %}
                                            <div class="col-xs-5-12">
                                                <a href="{{ path(mesd_presentation_login_path) }}" title="login" class="btn btn-default form-control" tabindex="3">
                                                    <span class="fa fa-reply"></span>&nbsp;
                                                    {{ 'login'|trans }}
                                                </a>
                                            </div>
                                        {% endif %}
                                    {#}
                                </div>
                                {{ form_rest(form) }}

                            {% endblock panelFooter %}
                        </div>

                    </form>
            
                {% endblock mesd_user_content %}
            
            </div>
        </div>
    </div>

{% endblock containerOuter %}
{#}
    {% if mesd_presentation_allow_password_reset %}
        <a href="{{ routeHelper(mesd_presentation_password_reset_path) }}" class="btn btn-link">{{ mesd_presentation_password_reset_text }}</a>
    {% endif %}
{#}