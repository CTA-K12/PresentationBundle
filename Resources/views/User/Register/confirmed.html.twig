{% extends "MesdUserBundle::layout.html.twig" %}
{% trans_default_domain "mesd_presentation" %}

{% block mesd_user_content %}
    <p>{{ 'registration.confirmed.for.%username%'|trans({'%username%': user.username}) }}</p>
    {% if app.session is not empty %}
        {% set targetUrl = app.session.get('_security.' ~ app.security.token.providerKey ~ '.target_path') %}
        {% if targetUrl is not empty %}<p><a href="{{ targetUrl }}">{{ 'back'|trans }}</a></p>{% endif %}
    {% endif %}
{% endblock mesd_user_content %}
